<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity" android:orientation="vertical">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_texto1" android:autofillHints="" android:hint="@string/digite_um_texto"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/edt_texto2" android:hint="@string/digite_um_texto"/>
    <Button
            android:text="@string/mostrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn_mostrar" android:onClick="onClickBtnMostrar"/>
    <Button
            android:text="Reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/btn_reset" android:onClick="onClickBtnReset"/>
</LinearLayout>